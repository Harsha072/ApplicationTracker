<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="donation"
            type="ie.wit.applicationtracker.models.ApplicationModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:elevation="24dp">

        <RelativeLayout
            android:id="@+id/cardCollege"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/collegeIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/app_name"
                app:srcCompat="@drawable/baseline_newspaper_24" />

            <TextView
                android:id="@+id/collegeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/collegeIcon"
                android:text="College Name"
                android:textSize="24sp" />



            <TextView
                android:id="@+id/appliedDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/collegeName"
                android:layout_marginTop="8dp"
                android:text="Applied Date"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/applicationEndDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/appliedDate"
                android:layout_marginTop="4dp"
                android:text="Application End Date"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/statusIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/collegeName"
                android:layout_marginStart="107dp"
                android:layout_marginTop="-26dp"

                android:layout_toEndOf="@+id/applicationEndDate"
                app:srcCompat="@drawable/star" />

            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/collegeName"
                android:layout_marginStart="-36dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@+id/statusIcon"
                android:text="status"
                android:textSize="16sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>